<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/show_spending_style.css">
  <title>Current Spending</title>
</head>
<body>
<div class="container">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-9">
      <a href="/logout" class="btn btn-danger" id="btnLogout">Logout</a>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12" style="text-align: center">
      <h1>Financial Servant</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12" style="text-align: center">
      <h2>Category</h2>
     <div class="dropdown" style="margin-top: 20px;">
       <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" style="background-color: #6C5B7B">
         Choose Categories
       <span class="caret"></span></button>
       <ul class="dropdown-menu" style="left: 40%">
         <li><a href="/showSpending">All</a></li>
         {{#each categoryList}}
           <li><a href="/showSpending?category={{this}}">{{this}}</a></li>
         {{/each}}
       </ul>
     </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">

    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <table class="table table-bordered table-striped table-hover">
        <thead>
          <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Category</th>
          </tr>
        </thead>
        <tbody>
          {{#each moneySpentList}}
            <tr>
              <td>{{getDate this.date}}</td>
              <td>{{this.amount}}</td>
              <td>{{this.description}}</td>
              <td>{{this.category}}</td>
            </tr>
          {{/each}}
        <tr>
          <td colspan="2" style="text-align: center">Sum</td>
          <td>{{ totalMoney }}</td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <a href="/addSpending" class="btn btn-primary" id="btnAddSpending">Add Spending</a>
    </div>
  </div>
</div>
<script src="/js/jquery-3.1.1.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
</body>
</html>